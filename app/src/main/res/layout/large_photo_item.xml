<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="widthHeightPhoto"
            type="String" />

        <variable
            name="photographerPhoto"
            type="String" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gutter_vertical"
        android:layout_marginLeft="@dimen/gutter_vertical"
        android:layout_marginEnd="@dimen/gutter_vertical"
        android:layout_marginRight="@dimen/gutter_vertical"
        android:layout_marginBottom="@dimen/gutter_horizontal"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView

            android:layout_width="match_parent"
            android:layout_height="@dimen/row_2"

            android:layout_marginBottom="@dimen/gutter_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_round_image_24"
                tools:src="@drawable/ic_round_image_24" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/text_view_photographer_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/gutter_horizontal_small"
                    android:text="@{photographerPhoto}"
                    android:textAppearance="?attr/textAppearanceBody1"  />

                <TextView
                    android:id="@+id/text_view_width_height_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/gutter_horizontal"
                    android:alpha="0.6"
                    android:text="@{widthHeightPhoto}"
                    android:textAppearance="?attr/textAppearanceBody2"  />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_round_favorite_24" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
</layout>